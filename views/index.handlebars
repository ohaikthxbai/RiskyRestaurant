  </div>
</div>

<script>
  var options1 = ['Lakeview', 'Lincoln Park', 'Old Town'];
  for (var i = 0; i < options1.length; i++) {
    var opt = document.createElement('option');
    opt.value = options1[i];
    opt.text = options1[i];
    firstSelect.options.add(opt);
  }

</script>